

{% block body %}

<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal{{asignacionclinica.idAsignacion}}">Nota</button>
<div class="modal fade" id="myModal{{asignacionclinica.idAsignacion}}" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body">
            {{ form_start(edit_form,{'attr':{'role':'form'}}) }}
                <div class="row">
                  <div class="col-md-5">
                    {{form_label(edit_form.notaClinica,'Nota')}}
                    {{ form_widget(edit_form.notaClinica,{'attr':{'class' : 'form-control'}}) }}
                  </div>
                </div>
              <div class="row">
                <div class="col-md-5">
                  {{form_label(edit_form.observacionesClinica,'Observaciones')}}
                  {{ form_widget(edit_form.observacionesClinica,{'attr':{'class' : 'form-control'}}) }}
                </div>
              </div>
              <br>
              <div class="row">
                <div class=" col-md-5">
                  {{ form_widget(edit_form.save, { 'label': 'Click me' }) }}
                  <button type="submit" name="Create" class="btn green">Guardar</button>
                  <a href="{{ path('asignacionclinica_listClinicasEstAsesor', { 'idAsignacion': asignacionclinica.idClinica.idClinica }) }}" class="btn yellow" >Cancelar</a>
                </div>
              </div>
              {{ form_end(edit_form) }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}
