{% extends 'layout.html.twig' %}

{% if is_granted('ROLE_DIRECTOR')%}
  {% block act29 %} active {% endblock %}
  {% block ac39 %} active {% endblock %}
{% else %}
  {% block act6 %}active{% endblock %}
  {% block ac25 %}active{% endblock %}
{% endif %}

{% block title %}
  <h1>Listado de Asignaciones</h1>
{% endblock %}
{% block body %}
<div class="portlet-body">
    <div class="row">
      <div class="col-md-2">
        <form method="get" action="" class="form-inline" role="search">
          <div class="input-group">
            <span class="input-group-btn">
              <button type="submit" name="buscar" class="btn btn-effect-ripple btn-info">
                <i class="fa fa-search"></i>
              </button>
            </span>
            <input type="text" name="query" value="{{ app.request.get('query') }}" class="form-control" placeholder="Buscar"/>
          </div>
        </form>
      </div>
      <div class="col-md-6">
        <div class="btn-group">
          <a href="{{ path('asignacionclinica_new') }}">
            <button id="sample_editable_1_new" class="btn green">
              Asignar Clínica
              <i class="fa fa-plus"></i>
            </button>
          </a>
        </div>
      </div>
      <br>
      <br>
  <div class="col-md-12 col-sm-12 col-xs-12" >
    <div class="table-responsive">
      <table class="table table-striped ">
        <thead>
          <tr>
              <th>Clínica</th>
              <th>Asesor</th>
              <th>Fecha de Inicio</th>
              <th>Fecha de Finalización</th>
              <th>Estado</th>
              <th>Opciones</th>
          </tr>
        </thead>
        <tbody>
          {% for asignacionclinica in asignacionclinicas %}
          <tr>
              <td>{{asignacionclinica.nombreClinica}}</td>
              <td>{{asignacionclinica.idPersona}}</td>
              <td>{% if asignacionclinica.fechaAsignacion %}{{ asignacionclinica.fechaAsignacion|date('Y-m-d') }}{% endif %}</td>
              <td>{% if asignacionclinica.fechaFin %}{{ asignacionclinica.fechaFin|date('Y-m-d') }}{% endif %}</td>
              <td>{% if asignacionclinica.estadoClinica %}Activo{% else %}No{% endif %}</td>
              <td>
                  <a href="{{ path('asignacionclinica_listEstudiantes', { 'idAsignacion': asignacionclinica.idClinica }) }}" class="btn yellow" >Listado</a>
              </td>
          </tr>
          {% endfor %}

        </tbody>
      </table>
    </div>
  </div>
  <div class="pagination m-b-5">
      {{ knp_pagination_render(asignacionclinicas) }}
  </div>
 </div>
</div>
{% endblock %}
