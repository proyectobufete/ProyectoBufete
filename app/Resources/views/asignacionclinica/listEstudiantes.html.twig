{% extends 'layout.html.twig' %}
{% block act6 %}active{% endblock %}
{% block ac25 %}active{% endblock %}
{% block title %}
  <h1>Listado de Estudiantes</h1>
{% endblock %}
{% block body %}
<div class="portlet-body">
    <div class="row">
      <div class="col-md-2">
        <form method="get" action="" class="form-inline" role="search">
          <div class="input-group">
            <span class="input-group-btn">
              <button type="submit" name="buscar" class="btn btn-effect-ripple btn-info">
                <i class="fa fa-search"></i>
              </button>
            </span>
            <input type="text" name="query" value="" class="form-control" placeholder="Buscar"/>

          </div>
        </form>
      </div>
      <div class="col-md-2">
        <div class="btn-group">
          <a href="{{ path('asignacionclinica_new') }}">
            <button id="sample_editable_1_new" class="btn green">
              Asignar Clínica
              <i class="fa fa-plus"></i>
            </button>
          </a>
        </div>
      </div>
      <div class="col-md-2">
          <div class="btn-group">
            <button type="submit" onclick=window.open("location='{{ path('asignacionclinica_printlistaEstudiantes'), { 'idAsignacion': idAsignacion }) }}'" name="imprimir" class="btn btn-purple">
              <i class="fa fa-file-pdf-o" aria-hidden="true"> Generar Listado PDF </i>
            </button>
          </div>
      </div>
      <div class="col-md-2">
          <div class="btn-group">
            <button type="submit" onclick="location='{{ path('asignacionclinica_printnotaEstudiantes', { 'idAsignacion': idAsignacion }) }}'" name="imprimir" class="btn">
              <i class="fa fa-file-pdf-o" aria-hidden="true"> Generar Listado con notas PDF </i>
            </button>
          </div>
      </div>
      <br>
      <br>
  <div class="col-md-12 col-sm-12 col-xs-12" >
    <div class="table-responsive">
      <table class="table table-bordered ">
        <thead>
          <tr>
              <th>Estudiante</th>
              <th>Carné</th>
              <th>Nota</th>
              <th>Observaciones</th>
              <th>Estado</th>
              <th></th>
          </tr>
        </thead>
        <tbody>
          {% for asignacionclinica in asignacionclinicas %}
          <tr>
              <td>{{asignacionclinica.idEstudiante}}</td>
              <td>{{asignacionclinica.idEstudiante.carneEstudiante}}</td>
              <td>{{asignacionclinica.notaClinica}}</td>
              <td>{{ asignacionclinica.observacionesClinica }}</td>
              <td>{% if asignacionclinica.estadoAsignacionest %}Activo{% else %}No{% endif %}</td>
              <td>
                  {% if asignacionclinica.notaClinica >= 61 %}
                    <a href="#">
                    <img src="{{ asset ('asst/img/check.png')}}" width="25" height="25"></a>Ganado
                  {% endif %}
                  {% if asignacionclinica.notaClinica < 61 %}
                    <a href="#">
                    <img src="{{ asset ('asst/img/x.png')}}" width="25" height="25"></a>Perdido
                  {% endif %}
              </td>
          </tr>
          {% endfor %}

        </tbody>
      </table>
    </div>
  </div>
 </div>
</div>
{% endblock %}
