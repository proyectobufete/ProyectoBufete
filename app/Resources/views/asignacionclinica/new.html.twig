{% extends 'layout.html.twig' %}
{% block act6 %}active{% endblock %}
{% block ac25 %}active{% endblock %}
      {% block title %}
        <h1> Asignar Clínica </h1>
      {% endblock %}

{% block body %}
    <div class="portlet-body form">
      <div id="form_sample_1" class="form-horizontal" >
        {{ form_start(form,{'attr':{'role':'form'}}) }}
        <div class="form-body colorform">
          <div class="col-md-offset-4">
          <div class="row">
            <div class="col-md-5">
              {{form_label(form.idEstudiante,'Estudiante')}}
              {{ form_widget(form.idEstudiante,{'attr':{'data-live-search' :'true','class' : 'selectpicker form-control'}}) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-5">
              {{form_label(form.idClinica,'Clínica')}}
              {{ form_widget(form.idClinica,{'attr':{'class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-5">
              {{form_label(form.observacionesClinica,'Observaciones')}}
              {{ form_widget(form.observacionesClinica,{'attr':{'class' : 'form-control'}}) }}
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-5">
              <label class="cr-styled">
                  {{ form_widget(form.estadoAsignacionest)}}
                  <i class="fa"></i>
                  {{form_label(form.estadoAsignacionest,'Estado')}}
              </label>
            </div>
          </div>
          <div class="row">
            <div class="col-md-5">
              {{ form_widget(form.notaClinica,{'attr':{'class' : 'form-control'}, 'type':'hidden'}) }}
            </div>
          </div>
        </div>
        </div>
        <div class="form-actions">
          <div class="row">
            <div class="col-md-offset-4 col-md-9">
              <button type="submit" name="Create" class="btn green">Crear</button>
              <a href="{{ path('asignacionclinica_index') }}"><button type="button" name="cancelar" class="btn default">Cancelar</button></a>
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
{% endblock %}
