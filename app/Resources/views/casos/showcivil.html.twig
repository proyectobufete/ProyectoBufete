{% extends 'layout.html.twig' %}

{% if is_granted('ROLE_DIRECTOR')%}
  {% block act27 %} active {% endblock %}
  {% block ac36 %} active {% endblock %}
{% else %}
  {% block act3 %} active {% endblock %}
  {% block ac8 %} active {% endblock %}
{% endif %}
{% block title %}
<div class="actions">

  {% if is_granted('ROLE_ESTUDIANTE') or is_granted('ROLE_ASESOR') %}
      <form method="post" action="{{ path('revisiones_indexLinkCaso')}}" class="form-inline" role="search">
          <button type="submit" name="buscar" class="button button1 ">Entregas del Caso</button>
          <input type="hidden" name="idCaso" value="{{caso.idCaso}}"/>
      </form>
  {% elseif is_granted('ROLE_ESTUDIANTE') %}
      <form method="post" action="{{ path('revisiones_indexLinkCaso')}}" class="form-inline" role="search">
          <button type="submit" name="buscar" class="button button1 ">Entregas del Caso</button>
          <input type="hidden" name="idCaso" value="{{caso.idCaso}}"/>
      </form>
  {% endif %}

</div>
  <h1>Detalles</h1>

{% endblock %}
{% block body %}
      <div class="portlet-body">
        <div class="col-md-offset-2">

          <div class="row">
              <div class="col-md-6">
              <label for="" class=" control-label"><h4><b>Lugar y Fecha</b></h4></label>
                <input disabled type="text" style="font-size:14px;"  class="form-control input-lg " value="{{ caso.idDemandante.idCiudad.ciudad }}, {{ caso.idDemandante.idCiudad.idDepartamento.departamento}}, {% if caso.fechaCaso %}{{(caso.fechaCaso|localizeddate('long', 'none', 'es'))}}{% endif %}">
              </div>
              <div class="col-md-3">
              <label for="" class=" control-label"><h4><b>No. Caso</b></h4></b></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.noCaso }}">
              </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-7">
                <label for=""><h3><b>Asunto</b></h3></label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
             <textarea disabled class="form-control" style="font-size:18px;" rows="1" value="" id="comment">{{ caso.idTipoasunto.asunto }}</textarea>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-5">
                <label for=""><h3><b>Datos del Demandante</b></h3></label>
              </div>
            </div>
          </div>
          <div class="row">
              <div class="col-md-5">
              <label for="" class=" control-label"><h4><b>Nombre</b></h4></label>
                <input disabled type="text" style="font-size:19px;"  class="form-control input-lg" value="{{ caso.idDemandante.nombreDemandante }}">
              </div>
              <div class="col-md-1">
              <label for="" class=" control-label"><h4><b>Edad</b></h4></b></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idDemandante.edadDemandante }}">
              </div>
              <div class="col-md-2">
              <label for="" class=" control-label"><h4><b>Teléfono</b></h4></b></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idDemandante.telefonoDemandante }}">
              </div>
          </div>
          <div class="row">
              <div class="col-md-4">
              <label for="" class=" control-label"><h4><b>DPI</b></h4></label>
                <input disabled type="text" style="font-size:20px;"  class="form-control input-lg" value="{{ caso.idDemandante.dpiDemandante }}">
              </div>
              <div class="col-md-4">
              <label for="" class=" control-label"><h4><b>Cédula</b></h4></b></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idDemandante.cedulaDemandante }}">
              </div>
          </div>
          <div class="row">
            <div class="col-md-4">
            <label for="" class=" control-label"><h4><b>Estado Civil</b></h4></b></label>
            <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idDemandante.idEstadocivil }}">
            </div>
              <div class="col-md-4">
              <label for="" class=" control-label"><h4><b>Profesión u Oficio</b></h4></label>
                <input disabled type="text" style="font-size:20px;"  class="form-control input-lg" value="{{ caso.idDemandante.idTrabajo.trabajo }}">
              </div>
          </div>
          <div class="row">
            <div class="col-md-3">
            <label for="" class=" control-label"><h4><b>Ciudad</b></h4></b></label>
            <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idDemandante.idCiudad.ciudad }}">
            </div>
            <div class="col-md-5">
            <label for="" class=" control-label"><h4><b>Dirección de Trabajo</b></h4></b></label>
            <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idDemandante.dirtrabajoDemandante }}">
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
            <label for="" class=" control-label"><h4><b>Dirección de Residencia</b></h4></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idDemandante.direccionDemandante }}">
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-6">
                <label disabled for=""><h3><b>Pretención Procesal</b></h3></label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
               <textarea disabled class="form-control" style="font-size:18px;" rows="4" value="" id="comment">{{ caso.civiles.pretencion }}</textarea>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-7">
                <label disabled for=""><h3><b>Pruebas</b></h3></label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
               <textarea disabled class="form-control" style="font-size:18px;" rows="4" value="" id="comment">{{ caso.pruebasCaso }}</textarea>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-6">
                <label disabled for=""><h3><b>Datos del Demandado</b></h3></label>
              </div>
            </div>
          </div>
          <div class="row">
              <div class="col-md-5">
              <label for="" class=" control-label"><h4><b>Nombre</b></h4></label>
                <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.nombreDemandado }}">
              </div>
              <div class="col-md-2">
              <label for="" class=" control-label"><h4><b>Teléfono</b></h4></b></label>
              <input disabled type="text" style="font-size:17px;"  class="form-control input-lg" value="{{ caso.telefonoDemandado }}">
              </div>
              <div class="col-md-1">
              <label for="" class=" control-label"><h4><b>Edad</b></h4></b></label>
              <input disabled type="text" style="font-size:17px;"  class="form-control input-lg" value="{{ caso.otroDemandado }}">
              </div>
          </div>
          <div class="row">
            <div class="col-md-8">
            <label for="" class=" control-label"><h4><b>Dirección</b></h4></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.dirDemandado }}">
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
            <label for="" class=" control-label"><h4><b>Dirección de Notificación</b></h4></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.dirnotificacionDemandado }}">
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-6">
                <label disabled for=""><h3><b>Datos del Estudiante</b></h3></label>
              </div>
            </div>
          </div>
          {% if caso.idEstudiante != null %}
          <div class="row">
            <div class="col-md-5">
            <label for="" class=" control-label"><h4><b>Nombre</b></h4></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idEstudiante.idPersona.nombrePersona }}">
            </div>
              <div class="col-md-3">
              <label for="" class=" control-label"><h4><b>Carné</b></h4></b></label>
              <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idEstudiante.carneEstudiante }}">
              </div>
          </div>
          <div class="row">
              <div class="col-md-2">
              <label for="" class=" control-label"><h4><b>Teléfono</b></h4></label>
                <input disabled type="text" style="font-size:17px;"  class="form-control input-lg" value="{{ caso.idEstudiante.idPersona.telefonoPersona }}">
              </div>
              <div class="col-md-6">
              <label for="" class=" control-label"><h4><b>Dirección</b></h4></b></label>
              <input disabled type="text" style="font-size:17px;"  class="form-control input-lg" value="{{ caso.idEstudiante.idPersona.direccionPersona }}">
              </div>
          </div>
          {% endif %}
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-6">
                <label disabled for=""><h3><b>Datos del Asesor</b></h3></label>
              </div>
            </div>
          </div>
          {% if caso.idPersona != null %}
          <div class="row">
              <div class="col-md-6">
              <label for="" class=" control-label"><h4><b>Nombre</b></h4></label>
                <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.idPersona.nombrePersona }}">
              </div>
              <div class="col-md-2">
              <label for="" class=" control-label"><h4><b>Teléfono</b></h4></b></label>
              <input disabled type="text" style="font-size:17px;"  class="form-control input-lg" value="{{ caso.idPersona.telefonoPersona }}">
              </div>
          </div>
          {% endif %}
          <div class="row">
              <div class="col-md-8">
              <label for="" class=" control-label"><h4><b>Observaciones</b></h4></label>
                <input disabled type="text" style="font-size:18px;"  class="form-control input-lg" value="{{ caso.observaciones }}">
              </div>
          </div>
          <br>
          <br>
            <div class="form-actions">


                {% if is_granted('ROLE_SECRETARIO') or is_granted('ROLE_DIRECTOR') or is_granted('ROLE_ADMIN') %}
                  <tr>
                    <a href="{{ path('casos_indexciviles') }}" class="btn grey w-xs m-b-5">Regresar</a>
                  </tr>

                    <a href="{{ path('casos_editcivil', { 'idCaso': caso.idCaso }) }}" class="btn blue w-xs m-b-5">Editar</a>


                    <a href="{{ path('casos_printcivil', {'idCaso': caso.idCaso }) }}" target="_blank" class="btn btn-purple w-xs m-b-5">Imprimir</a>

                  <tr>
                    <a href="{{ path('casos_transferircivil', { 'idCaso': caso.idCaso }) }}" class="btn btn-warning w-xs m-b-5">Transferir</a>
                  </tr>
                {% endif %}

            </div>
            <br>
            <br>
        </div>
      </div>
{% endblock %}
