{% extends 'layout.html.twig' %}
{% block act2 %} active {% endblock %}
{% block ac23 %} active {% endblock %}
{% block title %}
  <h1>Listado de Asuntos</h1>
{% endblock %}
{% block body %}
<div class="portlet-body">
    <div class="row">
      <div class="col-md-2">
        <form method="get" action="" class="form-inline" role="search">
          <div class="input-group">
            <span class="input-group-btn">
              <button type="submit" name="buscar" class="btn btn-effect-ripple btn-info">
                <i class="fa fa-search"></i>
              </button>
            </span>
            <input type="text" name="query" value="{{ app.request.get('query') }}" class="form-control" placeholder="Buscar"/>
          </div>
        </form>
      </div>
      <div class="col-md-6">
        <div class="btn-group">
          <a href="{{ path('tipoasunto_new') }}">
            <button id="sample_editable_1_new" class="btn green">
              Agregar Asunto
              <i class="fa fa-plus"></i>
            </button>
          </a>
        </div>
      </div>
      <br>
      <br>
  <div class="col-md-12 col-sm-12 col-xs-12" >
    <div class="table-responsive">
      <table class="table table-bordered ">
        <thead>
          <tr role="row" class="">
            <th>Asunto</th>
            <th>Opciones</th>
          </tr>
        </thead>
        <tbody>
          {% for tipoasunto in tipoasuntos %}
          <tr>
              <td>{{ tipoasunto.asunto }}</td>
              <td>
                  <a href="{{ path('tipoasunto_show', { 'idTipoasunto': tipoasunto.idTipoasunto }) }}" class="btn yellow" >Ver</a>
                  <a href="{{ path('tipoasunto_edit', { 'idTipoasunto': tipoasunto.idTipoasunto }) }}" class="btn blue">Editar</a>
              </td>
          </tr>
          {% endfor %}

        </tbody>
      </table>
    </div>
  </div>
 </div>
</div>
{% endblock %}
