{% extends 'base.html.twig' %}

{% block body %}
    <h1>Links habilitados</h1>

    <table>
        <thead>
            <tr>

                <th>Tituloentrega</th>
                <th>Fechacreacion</th>
                <th>Fechalimite</th>
                <th>Nombrearchivo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>




        {% for revisione in revisiones %}

            <tr>


                <td>{{ revisione.tituloEntrega }}</td>
                <td>{% if revisione.fechaCreacion %}{{ revisione.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if revisione.fechaLimite %}{{ revisione.fechaLimite|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ revisione.nombreArchivo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('revisiones_showLink', { 'idRevision': revisione.idRevision }) }}">Detalles</a>
                        </li>
                        <li>

                          fALTA EL LINK PARA EDITAR

                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('revisiones_newLink') }}">Habilitar Nuevo Link</a>
        </li>
    </ul>
{% endblock %}
