{% extends 'layout.html.twig' %}

      {% block title %}
        <h1>Subir informe</h1>
      {% endblock %}

{% block body %}
    <div class="portlet-body form">
      <div id="form_sample_1" class="form-horizontal" >
        {{ form_start(edit_form, {'enctype':'multipart/form-data'}) }}
        <div class="form-body colorform">
          <div class="col-md-offset-2">
            <div class="row">
              <div class="form-group ">
                  <label for="cname" class="control-label col-lg-2">Nombre de la resvisi√≥n</label>
                  <div class="col-md-5">
                      {{form_widget(edit_form.tituloEntrega,{'attr':{'class' : 'form-control'}}) }}
                  </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group ">
                  <label for="cname" class="control-label col-lg-2">Nombre del archivo</label>
                  <div class="col-md-5">
                    {% if revisione.RutaArchivo != null %}
                      <a href="{{ asset (ruta~revisione.RutaArchivo) }}" download>
                        <img src="{{ asset (ruta~'/pdf.png')}}" width="28" height="30">{{ revisione.nombreArchivo }}
                      </a>
                    {% endif %}
                  </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group ">
                  <label for="cname" class="control-label col-lg-2">Subir archivo</label>
                  <div class="col-md-5">
                      {{form_widget(edit_form['rutaArchivo']) }}
                  </div>
              </div>
            </div>


            <div class="row">
              <div class="form-group ">
                  <label for="cname" class="control-label col-lg-2">Comentarios</label>
                  <div class="col-md-5">
                      {{form_widget(edit_form.comentarios,{'attr':{'class' : 'form-control'}}) }}
                  </div>
              </div>
            </div>

            <input type="hidden" name="idRevision" value="{{revisione.idRevision}}"/>

          </div>
        </div>
        <div class="form-actions">
          <div class="row">
            <div class="col-md-offset-4 col-md-9">
              <input type="hidden" name="idRevision" value="{{revisione.idRevision}}"/>
              <button type="submit" name="Create" class="btn green">Editar</button>



            </div>
          </div>
        </div>
        {{ form_end(edit_form) }}

        <form method="post" action="{{ path('revisiones_indexLinkCaso')}}" class="form-inline" role="search">
            <button type="submit" name="buscar" class="button button1 ">Entregas del Caso</button>
            <input type="hidden" name="idCaso" value="{{revisione.idCaso}}"/>
        </form>

      </div>
    </div>
{% endblock %}
