{% extends 'layout.html.twig' %}
{% block act2 %} active {% endblock %}
{% block ac24 %} active {% endblock %}
{% block title %}
  <h1>Listado de Practicas</h1>
{% endblock %}
{% block body %}
  <div class="portlet-body">
    <div class="row">
      <div class="col-md-6">
        <div class="btn-group">
          <a href="{{ path('tipoparcticante_new') }}">
            <button id="sample_editable_1_new" class="btn green">
              Agregar Practica
              <i class="fa fa-plus"></i>
            </button>
          </a>
        </div>
      </div>
      <br>
      <br>

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr role="row" class="">
                  <th>Practica</th>
                <th>Opciones</th>
              </tr>
            </thead>
            <tbody>
              {% for tipoparcticante in tipoparcticantes %}
                <tr>
                    <td>{{ tipoparcticante.tipopracticante }}</td>
                  <td>
                    <a href="{{ path('tipoparcticante_show', { 'idtipopracticante': tipoparcticante.idtipopracticante}) }}" class="btn yellow">Ver</a>
                    <a href="{{ path('tipoparcticante_edit', { 'idtipopracticante': tipoparcticante.idtipopracticante }) }}" class="btn blue ">Editar</a>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
