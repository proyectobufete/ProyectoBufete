{% extends 'layout.html.twig' %}
{% block act5 %} active {% endblock %}
{% block ac29 %} active {% endblock %}
{% block title %}
  <h1>Editar Asesor</h1>
{% endblock %}

{% block body %}



  <div class="portlet-body form">
    <div id="form_sample_1" class="form-horizontal">
      {{ form_start(edit_form,{'attr':{'role':'form'}}) }}
      <div class="form-body">
        <div class="col-md-offset-3">
          <div class="row">
            <div class="col-md-6 col-md-offset-2">
              <label for="">
                <h4>
                  <b>Datos Personales</b>
                </h4>
              </label>
            </div>
          </div>




          <div class="row">
            <div class="col-md-3">
              {{form_label(edit_form.usuarioPersona,'Nombre de Usuario')}}
              {{form_widget(edit_form.usuarioPersona,{'attr':{'readonly':'readonly','class' : 'form-control'}}) }}
            </div>
            <div class="col-md-3">
              {{form_label(edit_form.passPersona,'Contrase√±a')}}
              {{form_widget(edit_form.passPersona,{'attr':{'readonly':'readonly','class' : 'form-control'}}) }}
            </div>
          </div>


        </div>
      </div>
      <div class="form-actions">
        <div class="row">
          <div class="col-md-offset-3 col-md-9">

            <input type="hidden" name="idPersona2" value="{{persona.idPersona}}"/>
            <button type="submit" name="Create" class="btn green">Guardar</button>



            {% if persona.role == "ROLE_SECRETARIO" %}
              <a href="{{ path('personas_indexEstudiantes') }}">
                <button type="button" name="cancelar" class="btn default">Cancelar</button>
              </a>
            {% elseif persona.role == "ROLE_ASESOR" %}
              <a href="{{ path('personas_indexEstudiantes') }}">
                <button type="button" name="cancelar" class="btn default">Cancelar (AUN NO SIRVE**)</button>
              </a>
            {% endif %}


          </div>
        </div>
      </div>
      {{ form_end(edit_form) }}
    </div>
  </div>

{% endblock %}
