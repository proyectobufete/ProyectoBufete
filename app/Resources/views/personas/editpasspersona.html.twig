{% extends 'layout.html.twig' %}
{% block act5 %} active {% endblock %}
{% block ac13 %} active {% endblock %}
{% block title %}
  <h1>Editar Asesor</h1>
{% endblock %}

{% block body %}
  <div class="portlet-body form">
    <div id="form_sample_1" class="form-horizontal">
      {{ form_start(edit_form,{'attr':{'role':'form'}}) }}
      <div class="form-body">
        <div class="col-md-offset-3">
          <div class="row">
            <div class="col-md-6 col-md-offset-2">
              <label for="">
                <h4>
                  <b>Datos Personales</b>
                </h4>
              </label>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              {{form_label(edit_form.nombrePersona,'Nombre')}}
              {{form_widget(edit_form.nombrePersona,{'attr':{'readonly':'readonly', 'class' : 'form-control'}}) }}
            </div>

          </div>
          <div class="row">
            <div class="col-md-2">
                {{form_label(edit_form.telefonoPersona,'Teléfono 1')}}
                {{form_widget(edit_form.telefonoPersona,{'attr':{'readonly':'readonly','class' : 'form-control'}}) }}
            </div>
            <div class="col-md-2">
                {{form_label(edit_form.tel2Persona,'Teléfono 2')}}
                {{form_widget(edit_form.tel2Persona,{'attr':{'readonly':'readonly','class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              {{form_label(edit_form.dpiPersona,'DPI')}}
              {{form_widget(edit_form.dpiPersona,{'attr':{'readonly':'readonly','class' : 'form-control'}}) }}
            </div>
            <div class="col-md-3">
              {{form_label(edit_form.emailPersona,'Correo Electrónico')}}
              {{form_widget(edit_form.emailPersona,{'attr':{'readonly':'readonly','class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              {{form_label(edit_form.direccionPersona,'Dirección')}}
              {{form_widget(edit_form.direccionPersona,{'attr':{'readonly':'readonly','class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              {{form_label(edit_form.usuarioPersona,'Nombre de Usuario')}}
              {{form_widget(edit_form.usuarioPersona,{'attr':{'readonly':'readonly','class' : 'form-control'}}) }}
            </div>
            <div class="col-md-3">
              {{form_label(edit_form.passPersona,'Contraseña')}}
              {{form_widget(edit_form.passPersona,{'attr':{'readonly':'readonly','class' : 'form-control'}}) }}
            </div>
          </div>
          <div class="row">
            <div class="col-md-3">
              {{form_label(edit_form.estadoPersona,'Estado')}}
              {{form_widget(edit_form.estadoPersona) }}
            </div>
            <div class="col-md-4">
              {{form_label(edit_form.role,'Tipo')}}
              {{form_widget(edit_form.role) }}
            </div>
          </div>

        </div>
      </div>


      <div class="form-actions">
        <div class="row">
          <div class="col-md-offset-3 col-md-9">
            <button type="submit" name="Create" class="btn green">Cambiar</button>

          </div>
        </div>
      </div>
      {{ form_end(edit_form) }}

      <form method="post" action="{{ path('personas_edituserAdmin')}}" class="form-inline" role="search">
          <button type="submit" name="buscar" class="btn yellow w-xs m-b-5">Cambiar Usuario</button>
          <input type="hidden" name="idPersona" value="{{persona.idPersona}}"/>
      </form>
      <a href="{{ path('personas_indexAsesores') }}">
        <button type="button" name="cancelar" class="btn default">Cancelar</button>
      </a>

    </div>
  </div>

{% endblock %}
