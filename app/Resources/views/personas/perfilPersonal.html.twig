{% extends 'layout.html.twig' %}
{% block act5 %} active {% endblock %}
{% block title %}
  <h1>Perfil del {{rolEnvio}}</h1>
{% endblock %}
{% block body %}
  <div class="portlet-body ">
    <div id="sample_1_wrapper" class="dataTable_wrapper table-responsive">
      <div class="col-md-offset-3">
        <div class="col-md-6">
          <table class="table table-striped table-hover dataTable no-footer">
            <tbody>


                <tr >
                  <div class="col-md-offset-3">
                    <img class="circulo " src="{{asset ('uploads/profile/'~ persona.foto) }}" width="100%" height="100%" />
                  </div>
                <tr>
                <br>
              <tr>
                <th>Nombre</th>
                <td>{{ persona.nombrePersona }}</td>
              </tr>
              <tr>
                <th>Tel√©fono</th>
                <td>{{ persona.telefonoPersona }}</td>
              </tr>
              <tr>
                <th>Direccion</th>
                <td>{{ persona.direccionPersona }}</td>
              </tr>
              <tr>
                <th>Email</th>
                <td>{{ persona.emailPersona }}</td>
              </tr>
              <tr>
                <th>Bufete</th>
                <td>{{ persona.idBufete }}</td>
              </tr>

              <tr>
                <th>Estado del Usuario</th>
                <td>
                  {% if persona.estadoPersona %}Habilitado{% else %}Deshabilitado{% endif %}
                </td>
              </tr>


            </tbody>
          </table>

          <table>
            <tr>

              {% if persona.role == "ROLE_ESTUDIANTE" %}
                <a href="{{ path('personas_indexEstudiantes') }}" class="btn grey">Regresar</a>
              {% elseif persona.role == "ROLE_ASESOR" %}
                <a href="{{ path('personas_indexAsesores') }}" class="btn grey">Regresar</a>
              {% endif %}
            </tr>
            <tr>
              {% if persona.role == "ROLE_ESTUDIANTE" %}
                <a href="{{ path('personas_editEstudiante', { 'idPersona': persona.idPersona }) }}" class="btn blue">Editar</a>
              {% elseif persona.role == "ROLE_ADMIN" or persona.role == "ROLE_SECRETARIO" or persona.role == "ROLE_DIRECTOR"%}
                <a href="{{ path('personas_index') }}" class="btn grey">Regresar</a>
                <form method="post" action="{{ path('personas_editPersona')}}" class="form-inline" role="search">
                    <button type="submit" name="buscar" class="btn blue">Editar</button>
                    <input type="hidden" name="idPersona" value="{{persona.idPersona}}"/>
                </form>
              {% endif %}
            </tr>
            <tr>
              {% if persona.role == "ROLE_ESTUDIANTE" %}
                <a href="{{ path('personas_HistorialEstudiante', { 'id': persona.estudiantes.idEstudiante })}}" class="btn yellow">Historial</a>
              {% endif %}
            </tr>
            </table>
          </div>
      </div>
      </div>
    </div>
  {% endblock %}
