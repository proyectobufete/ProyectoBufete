{% extends 'layout.html.twig' %}

{% block act5 %} active {% endblock %}
{% block ac13 %} active {% endblock %}

{% block title %}
  <h1>Listado de Asesores</h1>
{% endblock %}
{% block body %}
<div class="portlet-body">
    <div class="row">
      <div class="col-md-2">
        <form method="get" action="" class="form-inline" role="search">
          <div class="input-group">
            <span class="input-group-btn">
              <button type="submit" name="buscar" class="btn btn-effect-ripple btn-info">
                <i class="fa fa-search"></i>
              </button>
            </span>
            <input type="text" name="query" value="" class="form-control" placeholder="Buscar"/>
          </div>
        </form>
      </div>
      <div class="col-md-6">
        <div class="btn-group">
                  <a href="{{ path('personas_newpersonal') }}">
                    <button id="sample_editable_1_new" class="btn green">
                      Agregar Asesor <i class="fa fa-plus"></i>
                    </button></a>
        </div>
      </div>


  <div class="col-md-12 col-sm-12 col-xs-6">
      <table class="table table-bordered ">
        <thead>
          <tr role="row" class="">
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Email</th>
            <th>Bufete</th>
            <th>Opciones</th>
          </tr>
        </thead>
        <tbody>
          {% for persona in asesores %}
              <tr>
                <td>{{ persona.nombrePersona }}</td>
                <td>{{ persona.telefonoPersona }}</td>
                <td>{{ persona.direccionPersona }}</td>
                <td>{{ persona.emailPersona }}</td>
                <td>{{ persona.idBufete }}</td>
                  <td>
                    <a href="{{ path('personas_detalle', { 'idPersona': persona.idPersona }) }}" class="btn yellow" >Ver</a>

                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('personas_editPersona', { 'idPersona': persona.idPersona }) }}"  class="btn blue">Editar</a>
                    {% else %}
                        <a href="{{ path('personas_editAsesor', { 'idPersona': persona.idPersona }) }}"  class="btn blue">Editar</a>
                    {% endif %}

                  </td>
              </tr>
          {% endfor %}
        </tbody>
      </table>
  </div>
</div>
</div>
{% endblock %}
