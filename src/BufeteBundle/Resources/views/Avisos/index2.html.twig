{% extends "AppBundle:Default:layout.html.twig" %}

{% block title %}    

<h2 class="title"><span glyphicon glyphicon-ok></span> Crear Aviso</h2>
{% endblock %}    


{% block content %}    
    <div class="col-lg-12">        
        <hr/>
            {% if av is empty %}
                <p class="btn btn-danger">Error: El demandante no existe <span class="glyphicon glyphicon-remove"></span></p><hr/>
                <a title="Clic para volver a Intentar" href="{{path("avisos_buscar")}}"><span class="btn btn-success"><span class="glyphicon glyphicon-arrow-left"> Reintentar</span></span></a>            
            {% else %}              
                  <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>Caso</th>
                <th>Estudiante</th>                                
                <th>Demandante</th>
                <th>Demandado</th>
                <th>Tipo Caso</th>
                <th>Descripci√≥n</th>                
                <th>Crear</th>                
            </tr>
            {% for aviso in av %}
                <tr>
                    <td>{{aviso.nocaso}}</td>         
                    <td>{{aviso.nombre_persona}}</td>
                    <td>{{aviso.nombre_demandante}}</td>                   
                    <td>{{aviso.nombre_demandado}}</td>                   
                    <td>{{aviso.tipo}}</td>                     
                    <td>{{descrip}}</td>                     
                    <td><a title="Presione para crear el Aviso" href="{{path("avisos_add", {"idcaso":aviso.codigo_caso, "idest":aviso.id_estudiante, "iddem":aviso.id_demandante, "d":descrip})}}" class="btn btn-warning">Crear</a></span></td>                                
                </tr>                
            {% endfor %}            
            </table> 
            <a title="Clic para regresar" href="{{path("avisos_buscar")}}" class="btn btn-success"><span class="glyphicon glyphicon-arrow-left"> Regresar</span></a>
            {% endif %}                       
    </div>    
{% endblock %}
